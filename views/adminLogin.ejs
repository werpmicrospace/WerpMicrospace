<% include header %>

<div class="container-fluid pt-4" style="height: 100vh; background-size: cover; background-position: end; background-repeat: no-repeat; background-image: url('https://images.pexels.com/photos/935756/pexels-photo-935756.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="border-radius: 4px;">
      <a class="navbar-brand" href="/" style="padding-left: 20px;"><strong>WERP</strong></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
    
          <%  if(!currentUser){ %>
          <li class="nav-item">
            <a class="nav-link" href="/" style="font-weight: 700;">Intern Login</a>
          </li>
          <%  }else{  %>
          <li class="nav-item">
            <a class="nav-link" href="#"><%=currentUser.username%></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <%}%>
                
              </ul>
             
            </div>
          </nav>

          <div class="row" style="margin-top: 64px;">
            <div class="col-md-8"></div>
            <div class="col-md-4">
              <div class="card p-1 mt-4" style="box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16), 0px 3px 6px rgba(0, 0, 0, 0.23); border:0;">
                <div class="form" style="margin-top: 6vh; margin-bottom: 6vh;">
                  <div class="col-md-12">
                    <h2 style="font-weight: 700;">Login</h2>
                    <br />
                  </div>
                  <form action="/admin/login" method="POST" class="col-md-12">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Email address</label>
                      <input type="name" class="form-control" id="exampleInputEmail1" name="username" value=""
                        aria-describedby="emailHelp" placeholder="Enter email" />
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Password</label>
                      <input type="password" class="form-control" id="exampleInputPassword1" name="password" value=""
                        placeholder="Password" />
                    </div>
                    <br />
                    <div class="">
                      <button type="submit" class="btn btn-outline-primary col-lg-4">
                        Submit
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
  </div>


</div>

