<% include ../header %>
<style>
  body {
    font-weight: 700;
  }
</style>
<div  class="container" style="margin-top:2%;min-height: 90vh;">
  <h2 class="" style="font-weight:700;">Team Tasks</h2>
  <div style="padding-top:3%; padding-left: 0; padding-right: 0;">
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Task Name</th>
          <th scope="col">Description</th>
          <th scope="col">Score</th>
          <th scope="col">Remarks</th>
          <th scope="col">Date</th>
          <th scope="col">Current Status</th>
          <th scope="col">Edit Status / Date</th>
          <th>Submit</th>
        </tr>
      </thead>
      <tbody>
        <%for(var i=0;i<data.length;i++){%>

        <tr>
          <td style=""><a href="/admin/task/<%=data[i]._id%>"><%=data[i].taskname%></a></td>
          <td style=""><%=data[i].description.substring(0,20)%></td>
          <td style=""><%=data[i].score%></td>
          <td style=""><%=data[i].remarks%></td>
          <td style=""><%=data[i].date%></td>
          <td style="background-color: <%=data[i].color%>" id="chgcolor"><%=data[i].status%></td>
          <form action="/status/<%=data[i]._id%>" method="POST">
            <td>
              <div class="input-group date mb-1" data-provide="datepicker">
                <input type="date" name="dateq" class="form-control">
              </div>
              <select name="status"
                style="border: 1px solid #ccc; background: aliceblue; padding: 4px; border-radius: 4px;">
                <option value="Not started">Not started</option>
                <option value="Completed">Completed</option>
                <option value="Blocked">Blocked due to reason</option>
                <option value="Working on it">Working on it</option>
              </select>
            </td>
            <td>
              <input type="submit" class="btn btn-success">
            </td>
          </form>

        </tr>
        <%}%> 

      </tbody>
    </table>
  </div>
</div>
<% include ../footer %>
