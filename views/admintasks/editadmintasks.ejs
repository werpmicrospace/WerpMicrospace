<% include ../header %>
<div class="container">
    <div class="row">
        <form action="/editadmintasks/<%=data._id%>" method="POST">
            <div class="form-group">
              <label for="exampleInputEmail1">Task Name</label>
              <input type="taskname" class="form-control" id="exampleInputEmail1" name="taskname" value="<%=data.taskname%>" aria-describedby="emailHelp" required>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Description</label>
            </div>
            <textarea class="form-group" name="description" rows="4" cols="80" required><%=data.description%></textarea>
            <div class="form-group">
              <label for="exampleInputEmail1">Score</label>
              <input type="taskname" class="form-control" id="exampleInputEmail1" name="score" value="<%=data.score%>"
                aria-describedby="emailHelp">
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Remarks</label>
              <input type="taskname" class="form-control" id="exampleInputEmail1" name="remarks" value="<%=data.remarks%>"
                aria-describedby="emailHelp">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Team Lead Name</label>
                <input type="teamleadname" class="form-control" id="exampleInputEmail1" name="teamleadname" value="<%=data.teamleadname%>" aria-describedby="emailHelp" required>
              </div>
           
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
</div>


<% include ../footer %>
