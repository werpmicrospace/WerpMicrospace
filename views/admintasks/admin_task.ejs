<% include ../header %>
<div class="container">
  <div class="row">
    <form action="/taskassigned" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">Task Name</label>
        <input type="taskname" class="form-control" id="exampleInputEmail1" name="taskname" value=""
          aria-describedby="emailHelp" required>
      </div>
      <label for="exampleInputPassword1">Description</label>
      <div class="form-group">
        <textarea class="form-group" name="description" value="" rows="2" cols="80"
          placeholder="Give a short task description" required></textarea>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Score</label>
        <input type="taskname" class="form-control" id="exampleInputEmail1" name="score" value=""
          aria-describedby="emailHelp" required>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Remarks</label>
        <input type="taskname" class="form-control" id="exampleInputEmail1" name="remarks" value=""
          aria-describedby="emailHelp" required>
      </div>
      <div class="form-group">
        <label for="taskassignedto">Intern Name</label>
        <select name="userid" class="form-control">
          <%for(var i=0;i<data.length;i++){ %>
          <option value="<%=data[i]._id%>,<%=data[i].username%>"><%=data[i].username%></option>
          <%}%>
        </select>
      </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a  class="btn btn-primary" href="/showtasks">Show Tasks</a>
          </form>

    </div>
</div>


<% include ../footer %>