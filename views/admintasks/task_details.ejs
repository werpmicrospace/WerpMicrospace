<% include ../header %>
<div class="container">
    <div class="conatiner card card-body">
    <h2>Details-</h2>
    <p><%=task.details%></p>
    </div>
    <hr>
    <h3>Task : <%= task.taskname %></h3>
    <hr>
    <div class="card bg-white p-3">
        <p><%= task.details %></p>
    </div>
    <div class="card bg-light p-3">
            <a href="/admin/task/<%= task._id %>/comment" style="text-align:right;">Add a comment</a>
        <h5>Comments:</h5>
        <% task.comments.forEach(function(comm){ %>
            <div class="card">
                <div class="row">
                    <div class="col-md-10">
                        <!-- <p><%= comm.userid %></p> -->
                        <h5><%= comm.author %>:</h5>
                        <p><%= comm.text%></p>

                    </div>
                    <div class="col-md-2">
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<% include ../footer %>